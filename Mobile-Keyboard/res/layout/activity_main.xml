<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rmawong.mobile_keyboard.MainActivity"
    tools:ignore="MergeRootFrame" >
    
    <TextView
        android:text="All Devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop ="true"
        android:id="@+id/tvPD"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textField"
        android:layout_below="@+id/tvPD" >
    </ListView>

    <Button
        android:id="@+id/bSendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Send Message" />

    <EditText
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bSendMessage"
        android:ems="10"
        android:imeOptions="actionNone"
        android:inputType="text"
        android:text="0" />

</RelativeLayout>
